<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="create_expense_form" model="ir.ui.view">
        <field name="name">Create Expense Form</field>
        <field name="model">create.expense.wizard</field>
        <field name="arch" type="xml">
            <form string="create_expnse_report_form">
                <sheet>
                    <group>
                        <field name="session_ids">
                            <tree editable="bottom">
                                <field name="store_id"/>
                                <field name="total"/>
                                <field name="product_id" domain="[('can_be_expensed' ,'=', 'True')]" string="Category"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button string="Create"  name='create_expense' type="object" class='btn btn-primary'/>
<!--                        <button string="Cancel" calss="btn-secondary" speical="cancel"/>-->
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="create_expense_form_wizard" model="ir.actions.act_window">
        <field name="name">Create Expense</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">create.expense.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="create_expense_form"/>
        <field name="target">new</field>
    </record>





