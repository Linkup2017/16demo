<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_company_view_form_inherit" model="ir.ui.view">
            <field name="name"></field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='favicon']" position="after">
                    <field name="connect_card" groups="base.group_no_one"/>
                </xpath>
                 <xpath expr="//page[@name='general_info']" position='after'>
                    <page name="account_config" string="Bizplay Configuration" attrs="{'invisible': [('connect_card', '=', False)]}" groups="base.group_no_one">
                        <group string="Settings" colspan="2" name="biz_settings" >
                            <group>
                                <field name="api_key" string="API Key" attrs="{'required': [('connect_card','=', True)]}"/>
                                <field name="org_code" attrs="{'required': [('connect_card','=', True)]}"/>
                                <field name="connection_state" style="color: red;" attrs="{'invisible': [('connection_state', '=', 'connected')]}"/>
                                <field name="connection_state"  style="color: green;" attrs="{'invisible': [('connection_state', '=', 'error')]}"/>
                            </group>
                            <group>
                                <field name="biz_no" attrs="{'required': [('connect_card','=', True)]}"/>
                                <field name="card_test"/>
<!--                                <field name="product_id" attrs="{'required': [('connect_card','=', True)]}"/>-->

                            </group>
                            <group>
                                <button name='send_api' class="oe_highlight oe_read_only"  type="object" string="Test Connection"/>
                                <field name="result_cd" invisible="1"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
