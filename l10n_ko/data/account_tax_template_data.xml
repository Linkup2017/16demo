<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="tax_input_vat" model="account.tax.template">
        <field name="chart_template_id" ref="chart"/>
        <field name="name">세금 10%</field>
        <field name="amount_type">percent</field>
        <field name="amount" eval="10"/>
        <field name="type_tax_use">purchase</field>
        <field name="tax_group_id" ref="tax_group_1"/>
        <field name="invoice_repartition_line_ids" eval="[(5, 0, 0),
            (0,0, {
                'factor_percent': 100,
                'repartition_type': 'base',
            }),
            (0,0, {
                'factor_percent': 100,
                'repartition_type': 'tax',
                'account_id': ref('kr_a_135000'),
            }),
        ]"/>
        <field name="refund_repartition_line_ids" eval="[(5, 0, 0),
            (0,0, {
                'factor_percent': 100,
                'repartition_type': 'base',
            }),
            (0,0, {
                'factor_percent': 100,
                'repartition_type': 'tax',
                'account_id': ref('kr_a_135000'),
            }),
        ]"/>
    </record>

    <record id="tax_output_vat" model="account.tax.template">
        <field name="chart_template_id" ref="chart"/>
        <field name="name">세금 10%</field>
        <field name="amount_type">percent</field>
        <field name="amount" eval="10"/>
        <field name="type_tax_use">sale</field>
        <field name="tax_group_id" ref="tax_group_1"/>
        <field name="invoice_repartition_line_ids" eval="[(5, 0, 0),
            (0,0, {
                'factor_percent': 100,
                'repartition_type': 'base',
            }),
            (0,0, {
                'factor_percent': 100,
                'repartition_type': 'tax',
                'account_id': ref('kr_a_135000'),
            }),
        ]"/>
        <field name="refund_repartition_line_ids" eval="[(5, 0, 0),
            (0,0, {
                'factor_percent': 100,
                'repartition_type': 'base',
            }),
            (0,0, {
                'factor_percent': 100,
                'repartition_type': 'tax',
                'account_id': ref('kr_a_135000'),
            }),
        ]"/>
    </record>

</odoo>
