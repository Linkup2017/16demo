<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_approval_wizard" model="ir.ui.view">
            <field name="name">approval.wizard.view</field>
            <field name="model">approval.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="comment"/>
                    </group>
                    <footer>
                        <button name="done" string="OK" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-default" special="cancel"/>
                    </footer>

                </form>
            </field>
        </record>

        <record id="approval_message_wizard_form" model="ir.ui.view">
            <field name="name">approver.select.wizard.form</field>
            <field name="model">approver.select.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <field name="message" readonly="True"/>
                    <footer>
                        <button name="done" string="OK" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>