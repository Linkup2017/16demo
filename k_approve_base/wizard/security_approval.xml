<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_kapprove_security_wizard" model="ir.ui.view">
            <field name="name">kapprove.security.wizard.view</field>
            <field name="model">kapprove.security.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="password" password="True"/>
                            <field name="comment"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_submit" string="OK" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-default" special="cancel"/>
                    </footer>

                </form>
            </field>
        </record>
    </data>
</odoo>