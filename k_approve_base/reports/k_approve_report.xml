<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="k_approve_base_paperformat" model="report.paperformat">
        <field name="name">Approval A4</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">20</field>
        <field name="margin_bottom">25</field>
        <field name="margin_left">5</field>
        <field name="margin_right">0</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">10</field>
        <field name="dpi">100</field>
    </record>


    <record id="k_approve_report" model="ir.actions.report">
        <field name="name">Approval Document</field>
        <field name="model">kapprove.doc</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">k_approve_base.approve_doc_print</field>
        <field name="report_file">k_approve_base.approve_doc_print</field>
        <field name="binding_model_id" ref="k_approve_base.model_kapprove_doc"/>
        <field name="binding_type">report</field>
    </record>

    <record id="k_approve_report" model="ir.actions.report">
        <field name="paperformat_id" ref="k_approve_base.k_approve_base_paperformat"/>
    </record>

</odoo>
