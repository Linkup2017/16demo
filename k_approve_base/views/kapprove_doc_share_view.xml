<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="id_k_approval_doc_share_tree_view" model="ir.ui.view">
            <field name="name">k_approval.request.share.view.tree</field>
            <field name="model">kapprove.doc</field>
            <field name="arch" type="xml">
                <tree create="0" default_order="create_on desc">
                    <field name="name" string="Number"/>
                    <field name="doc_name"/>
                    <field name="user_id"/>
                    <field name="create_on"/>
                    <field name="origin"/>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <field name="state" decoration-success="state == 'submit' or state == 'in_progress'"
                           decoration-danger="state == 'refused'" widget="badge" optional="show"/>
                </tree>
            </field>
        </record>

        <record id="id_k_approval_doc_share_form_view" model="ir.ui.view">
            <field name="name">k_approval.receive.view.form</field>
            <field name="model">kapprove.doc</field>
            <field name="arch" type="xml">
                <form create="0" attrs="{'readonly': [('state','not in',['draft'])]}">
                    <header>
                        <button name="action_submit" string="SUBMIT" type="object" class="oe_highlight"
                                confirm="Do you want to Submit Document?"
                                attrs="{'invisible': [('state', 'not in', ['draft'])]}"/>

                        <widget name="attach_document" action="message_post" string="ATTACH DOCUMENT" highlight="1"
                                attrs="{'invisible': [('state', 'not in', ['draft'])]}"/>
                        <field name="state" widget="statusbar" readonly="1"/>
                        <button name="action_cancel" string="CANCEL" type="object"
                                attrs="{'invisible': ['|', ('state', 'not in', ['draft', 'submit']), ('current_user', '!=', True)]}"/>

                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>

                        <group>
                            <div class="oe_title">
                                <h2>
                                    <field name="name"/>
                                </h2>
                            </div>
                        </group>
                        <group>
                            <group>
                                <field name="doc_name" attrs="{'readonly': [('state','not in',['draft'])]}"/>
                                <field name="doc_type" attrs="{'readonly': [('state','not in',['draft'])]}"/>
                                <field name="period" attrs="{'readonly': [('state','not in',['draft'])]}"/>
                                <field name="secret" attrs="{'readonly': [('state','not in',['draft'])]}"/>
                                <field name="priority" attrs="{'readonly': [('state','not in',['draft'])]}" widget="priority"/>
                                <field name="my_approver_line_id" attrs="{'readonly': [('state','not in',['draft'])]}"/>
                                <field name="active" invisible="1"
                                       attrs="{'readonly': [('state','not in',['draft'])]}"/>
                                <field name="submit_user_id" widget="many2many_tags" attrs="{'invisible': [('submit_user_id','=',[])]}"/>
                            </group>
                            <group>
                                <field name="user_id"/>
                                <field name="create_on"/>
                                <!--<field name="categ_id" attrs="{'readonly': [('state','not in',['draft'])]}"/>-->
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"
                                       attrs="{'readonly': [('state','not in',['draft'])]}"/>
                                <field name="origin" attrs="{'invisible': [('origin', '=', False)]}"/>
                                <field name="submit_date" attrs="{'invisible': [('submit_date', '=', False)]}"/>
                                <field name="approve_date" attrs="{'invisible': [('approve_date', '=', False)]}"/>
                                <field name="users" widget="many2many_tags" invisible="1"
                                       attrs="{'readonly': [('state','not in',['draft'])]}"/>
                                <field name="current_user" invisible="1"/>
                                <field name="cooperation_users" string="Cooperation Users" widget="many2many_tags"
                                       invisible="1"/>

                            </group>
                        </group>
                        <notebook>
                            <page string="Description" name="detail">
                                <field name="detail" attrs="{'readonly': [('state','not in',['draft'])]}"/>
                            </page>
                            <page string="Approver(s)" name="approvers">
                                <field name="approver_ids" attrs="{'readonly': [('state','not in',['draft'])]}">
                                    <tree string="Approvers" editable="bottom">
                                        <field name="user_id"
                                               domain="['&amp;', ('id', 'not in', parent.users), ('id', '!=', uid)]"/>
                                        <field name="approve_type"/>
                                        <field name="department_id"/>
                                        <field name="job_title"/>
                                        <field name="job_position"/>
                                        <field name="state"/>
                                        <field name="date"/>
                                    </tree>
                                </field>
                                <group>
                                    <group>
                                        <field name="user_ids" widget="many2many_tags" string="Cooperation"
                                               domain="[('id', '!=', uid)]"
                                               attrs="{'readonly': [('state','not in',['draft'])]}"/>
                                    </group>
                                </group>

                            </page>

                            <page string="Cooperation" name="cooperation"
                                  attrs="{'invisible': [('state', 'in', ['draft', 'submit', 'in_progress', 'refused', 'cancel'])]}">

                                <field name="cooperation_ids" attrs="{'readonly': [('state','not in',['draft'])]}">
                                    <tree string="Cooperation" editable="bottom">
                                        <field name="user_id"
                                               domain="['&amp;', ('id', 'not in', parent.cooperation_users), ('id', '!=', uid)]"/>
                                        <field name="department_id"/>
                                        <field name="job_title"/>
                                        <field name="job_position"/>
                                        <field name="checked_date"/>
                                        <field name="is_checked"/>
                                    </tree>
                                </field>

                            </page>

                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="kapprove_doc_search_view" model="ir.ui.view">
            <field name="name">kapprove.doc.search.view</field>
            <field name="model">kapprove.doc</field>
            <field name="arch" type="xml">
                <search string="Categories">
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                   <!-- <field name="categ_id"/>-->
                    <searchpanel>
                      <!--  <field name="categ_id" string="Category" icon="fa-file-o" enable_counters="1"/>-->
                        <field name="tag_ids" select="multi" icon="fa-tag" enable_counters="1"/>
                    </searchpanel>
                </search>
            </field>
        </record>

        <record id="action_kapproval_my_approval" model="ir.actions.act_window">
            <field name="name">My Documents</field>
            <field name="res_model">kapprove.doc</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('user_id', '=', uid)]</field>
            <field name="search_view_id" ref="kapprove_doc_search_view"/>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('id_k_approval_doc_share_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('id_k_approval_doc_share_form_view')})]"/>
        </record>

        <menuitem id="menu_my_approvals" name="My Documents" sequence="2" parent="menu_kapproval"
                  action="action_kapproval_my_approval"/>
    </data>
</odoo>