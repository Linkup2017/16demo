<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="id_k_approval_doc_share_tree_view_received" model="ir.ui.view">
            <field name="name">k_approval.request.share.view.tree.received</field>
            <field name="model">kapprove.doc</field>
            <field name="arch" type="xml">
                <tree create="0" edit="0" default_order="create_on desc">
                    <field name="name" string="Number"/>
                    <field name="doc_name"/>
                    <field name="user_id"/>
                    <field name="create_on"/>
                    <field name="origin"/>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <field name="state" decoration-success="state == 'submit' or state == 'in_progress'"
                           decoration-danger="state == 'refused'" widget="badge" optional="show"/>
                </tree>
            </field>
        </record>

        <record id="id_k_approval_doc_share_form_view_received" model="ir.ui.view">
            <field name="name">k_approval.receive.view.form.received</field>
            <field name="model">kapprove.doc</field>
            <field name="arch" type="xml">
                <form create="0" edit="0">
                    <header>
                        <button name="action_check" string="CHECK" type="object" class="btn-success"
                                attrs="{'invisible': ['|', ('doc_check','=',True), ('state', 'in', ['draft', 'submit', 'in_progress', 'refused', 'cancel'])]}"/>
                        <button name="action_approve" string="APPROVE" type="object" class="btn-success"
                                attrs="{'invisible': ['|', ('current_approver','=',False),('state', 'in', ['draft', 'approved', 'refused', 'cancel'])]}"/>
                        <button name="action_refuse" string="REFUSE" type="object" class="btn-danger"
                                attrs="{'invisible':['|', ('current_approver','=',False),('state', 'in', ['draft', 'approved', 'refused', 'cancel'])]}"/>
                        <widget name="attach_document" action="message_post" string="ATTACH DOCUMENT" highlight="1"
                                attrs="{'invisible': [('state', 'not in', ['draft'])]}"/>
                        <button name="action_cancel" string="CANCEL" type="object"
                                attrs="{'invisible': ['|', ('state', 'not in', ['draft', 'submit']), ('current_user', '!=', True)]}"/>

                        <field name="state" widget="statusbar" readonly="1"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>

                        <group>
                            <div class="oe_title">
                                <h2>
                                    <field name="name"/>
                                </h2>
                            </div>
                        </group>
                        <group>
                            <group>
                                <field name="doc_name"/>
                                <field name="doc_type"/>
                                <field name="period"/>
                                <field name="secret"/>
                                <field name="priority" widget="priority"/>
                                <field name="active" invisible="1"/>
                                <field name="submit_user_id" widget="many2many_tags" attrs="{'invisible': [('submit_user_id','=',[])]}"/>
                                <field name="cooperation_user_ids" widget="many2many_tags"/>
                                <field name="current_approver" invisible="1"/>
                                <field name="is_approved" invisible="1"/>
                                <field name="is_my_approval" invisible="1"/>
                                <field name="current_user" invisible="1"/>
                                <field name="doc_check" invisible="1"/>

                            </group>
                            <group>
                                <field name="user_id"/>
                                <field name="create_on"/>
                                <!--<field name="categ_id"/>-->
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                <field name="origin" attrs="{'invisible': [('origin', '=', False)]}"/>
                                <field name="submit_date" attrs="{'invisible': [('submit_date', '=', False)]}"/>
                                <field name="approve_date" attrs="{'invisible': [('approve_date', '=', False)]}"/>
                                <field name="users" widget="many2many_tags" invisible="1"/>
                                <field name="cooperation_users" string="Cooperation Users" widget="many2many_tags"
                                       invisible="1"/>

                            </group>
                        </group>
                        <notebook>
                            <page string="Description" name="detail">
                                <field name="detail"/>
                            </page>
                            <page string="Approver(s)" name="approvers">
                                <field name="approver_ids">
                                    <tree string="Approvers" editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="user_id"
                                               domain="['&amp;', ('id', 'not in', parent.users), ('id', '!=', uid)]"/>
                                        <field name="approve_type"/>
                                        <field name="department_id"/>
                                        <field name="job_title"/>
                                        <field name="job_position"/>
                                        <field name="state"/>
                                        <field name="date"/>
                                    </tree>
                                </field>
                                <group>
                                    <group>
                                        <field name="user_ids" widget="many2many_tags" string="Cooperation"
                                               domain="[('id', '!=', uid)]"/>
                                    </group>
                                </group>

                            </page>
                            <page string="Cooperation" name="cooperation"
                                  attrs="{'invisible': [('state', 'in', ['draft', 'submit', 'in_progress', 'refused', 'cancel'])]}">

                            <field name="cooperation_ids">
                                <tree string="Cooperation" editable="bottom">
                                    <field name="user_id"
                                           domain="['&amp;', ('id', 'not in', parent.cooperation_users), ('id', '!=', uid)]"/>
                                    <field name="department_id"/>
                                    <field name="job_title"/>
                                    <field name="job_position"/>
                                    <field name="checked_date"/>
                                    <field name="is_checked"/>
                                </tree>
                            </field>

                        </page>

                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="kapprove_doc_search_view_received" model="ir.ui.view">
        <field name="name">kapprove.doc.search.received.view</field>
        <field name="model">kapprove.doc</field>
        <field name="arch" type="xml">
            <search string="Categories">
                <separator/>
                <!--                    <field name="categ_id"/>-->
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <separator/>

                <filter string="My Approvals" name="myapproval"
                        domain="[('submit_user_id', '=', uid)]"/>
                <filter string="My Cooperation" name="mycooperation"
                        domain="[('cooperation_user_ids', '=', uid)]"/>
                <separator/>

                <filter string="State is Submit" name="statesubmit"
                        domain="[('state', '=', 'submit')]"/>
                <filter string="State is In Progress" name="state_inprogress"
                        domain="[('state', '=', 'in_progress')]"/>


            </search>
        </field>
    </record>

    <record id="action_kapproval_received_approval" model="ir.actions.act_window">
        <field name="name">Received Approvals</field>
        <field name="res_model">kapprove.doc</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state','not in',('draft', 'sent', 'cancel'))]</field>
        <field name="context">{'search_default_myapproval': 1, 'search_default_mycooperation': 1,
            'search_default_statesubmit': 1, 'search_default_state_inprogress': 1}
        </field>
        <field name="search_view_id" ref="kapprove_doc_search_view_received"/>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('id_k_approval_doc_share_tree_view_received')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('id_k_approval_doc_share_form_view_received')})]"/>
    </record>

    <menuitem id="menu_received_approvals" name="My Approvals" sequence="1" parent="menu_kapproval"
              action="action_kapproval_received_approval"/>

    <record id="recompute_submit_userid" model="ir.actions.server">
        <field name="name">Submit User</field>
        <field name="model_id" ref="k_approve_base.model_kapprove_doc"/>
        <field name="binding_model_id" ref="k_approve_base.model_kapprove_doc"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">action = records.action_recompute_submit_userid()</field>
    </record>


</data>
        </odoo>