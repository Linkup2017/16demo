<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="id_k_approval_line_tree_view" model="ir.ui.view">
            <field name="name">k_approval.line.view.tree</field>
            <field name="model">kapprove.line</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Name"/>
                </tree>
            </field>
        </record>


        <record id="id_k_approval_line_form_view" model="ir.ui.view">
            <field name="name">k_approval.line.view.form</field>
            <field name="model">kapprove.line</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="users" widget="many2many_tags" invisible="1"/>
                                <field name="user_id" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Approver(s)" name="approvers">
                                <field name="approver_ids">
                                    <tree string="Approvers" editable="bottom">
                                        <field name="user_id"
                                               domain="['&amp;', ('id', 'not in', parent.users), ('id', '!=', uid)]"/>
                                        <field name="approve_type"/>
                                        <field name="department_id"/>
                                        <field name="job_title"/>
                                        <field name="job_position"/>
                                    </tree>
                                </field>
                                <group>
                                    <group>
                                        <field name="cooperation_user_ids" widget="many2many_tags" string="Cooperation"
                                               domain="[('id', '!=', uid)]"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="action_kapproval_line" model="ir.actions.act_window">
            <field name="name">Approver Line</field>
            <field name="res_model">kapprove.line</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('user_id', '=', uid)]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('id_k_approval_line_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('id_k_approval_line_form_view')})]"/>
        </record>

        <menuitem id="menu_approver_line" name="My Approver Line" sequence="3" parent="menu_kapproval"
                  action="action_kapproval_line"/>


    </data>
</odoo>